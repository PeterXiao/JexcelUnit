<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <File name="SUITE" fileName="./logs/suite.log" append="false">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
        </File>
		<File name="TEST" fileName="./logs/testing.log" append="false">
			<PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
		</File>
        <File name="EXCEL" fileName="./logs/excel.log" append="false">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
        </File>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
        </Console>
		<InMemoryAppender name="InMemory">
			<PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
		</InMemoryAppender>
    </Appenders>
    <Loggers>
        <Logger name="ExcelLogger" level="debug">
            <AppenderRef ref="EXCEL" />
			<AppenderRef ref="STDOUT" />
        </Logger>

		<AsyncLogger  name="SuiteLogger" level="debug">
            <AppenderRef ref="SUITE" />
			<AppenderRef ref="STDOUT" />
        </AsyncLogger >

		<AsyncLogger name="TestLogger" level="debug">
			<AppenderRef ref="TEST" />
			<AppenderRef ref="STDOUT" />
		</AsyncLogger>

		<Root level="debug">
            <AppenderRef ref="STDOUT" />
        </Root>
    
</Loggers>
</Configuration>